server {
    listen 9080; # Listen on port 9080 ngrok points at this port

    root /var/www/html;

    # Prevent nginx from adding port to redirects (important for ngrok)
    absolute_redirect off;
    port_in_redirect off;

    location /public {
        alias /workdir/persistent/public; # Alias /public to /workdir/persistent/public
        autoindex on; # Enable directory listing
        try_files $uri $uri/ =404; # Return 404 if file not found
    }

    location /webhook {
        proxy_pass http://localhost:5002; # Proxy to webhook catcher
        proxy_http_version 1.1;
        client_max_body_size 32M;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        proxy_pass http://localhost:5000; # Proxy to the app
        proxy_http_version 1.1;
        client_max_body_size 32M;
        proxy_next_upstream_tries 0;
        proxy_next_upstream_timeout 1s;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}
